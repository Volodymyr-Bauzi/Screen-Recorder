{
  "name": "screen-recorder",
  "private": true,
  "version": "0.1.0",
  "description": "Electron + React screen recorder with instant replay functionality",
  "main": "./electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run build:electron && cross-env \"NODE_ENV=development\" electron .",
    "build": "vite build",
    "preview": "vite preview",
    "build:electron": "webpack --config webpack.electron.config.js",
    "dist:mac": "npm run build:electron && npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run build:electron && npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build:electron && npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "os-utils": "^0.0.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.1",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "vite": "^6.2.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
